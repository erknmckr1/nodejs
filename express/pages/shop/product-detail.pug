extends ../layout/layout.pug 

block content 
    div(class="w-full h-full pl-2")
        div(class="w-full h-full flex gap-x-5")
            div(class="w-1/3 h-full")
                img(src=`${product.image}` alt=`${product.description}`)
            div(class="w-2/3 h-full flex flex-col  justify-between ")
                p(class="text-[25px] font-semibold") #{product.name}
                hr
                p(class="py-1") #{product.description}
                br
                p(class="py-1") price: #{product.price}
                button(type="button" class="h-14 bg-blue-300 w-24 rounded-md mt-3") Add to cart