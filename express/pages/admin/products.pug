extends ../layout/layout.pug

block content
    div(class='w-2/3 h-full flex flex-col gap-y-3 ml-1')
        if products.length > 0
            table(class="w-full h-full ")
                thead(class="bg-gray-300 py-2 px-2")
                    tr(class="p-2  ")
                        th  Image
                        th  Product Name
                        th  Price
                        th  Description
                        th
                tbody
                    each product in products
                        tr(class="p-2 hover:bg-[#F4F6F6] ")
                            td(class=" h-auto")
                               img(src=`${product.image}` class="d-block w-10" alt="...")
                            td
                                span(class=" ") #{product.name}
                            td
                                span(class=" ") #{product.price} TL
                            td
                                span(class=" ") #{product.description}
                            td 
                                a(href=`edit-product/${product.id}`)
                                    button(class="bg-[#F4F6F6] p-2") edit

        else
            h1 No Product
        
